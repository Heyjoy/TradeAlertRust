# Railway 环境变量配置示例
# 复制以下变量到Railway Dashboard的Variables页面

# 🚀 服务器配置 (必需)
TRADE_ALERT__SERVER__HOST=0.0.0.0
TRADE_ALERT__SERVER__PORT=3000

# 🗄️ 数据库配置 (自动处理)
# DATABASE_URL 由Railway自动提供，无需手动设置

# 📧 邮件配置 (必需)
TRADE_ALERT__EMAIL__SMTP_SERVER=smtp.gmail.com
TRADE_ALERT__EMAIL__SMTP_PORT=587
TRADE_ALERT__EMAIL__SMTP_USERNAME=你的Gmail地址
TRADE_ALERT__EMAIL__SMTP_PASSWORD=你的Gmail应用专用密码
TRADE_ALERT__EMAIL__FROM_EMAIL=你的Gmail地址
TRADE_ALERT__EMAIL__FROM_NAME=股票预警系统
TRADE_ALERT__EMAIL__TO_EMAIL=你的Gmail地址
TRADE_ALERT__EMAIL__ENABLED=true

# ⏰ 调度器配置 (必需)
TRADE_ALERT__SCHEDULER__DEFAULT_SCHEDULE=*/5 * * * *

# 💰 价格获取配置 (必需)
TRADE_ALERT__PRICE_FETCHER__UPDATE_INTERVAL_SECS=30
TRADE_ALERT__PRICE_FETCHER__CACHE_TTL_SECS=3600
TRADE_ALERT__PRICE_FETCHER__MAX_RETRIES=3
TRADE_ALERT__PRICE_FETCHER__MAX_CONCURRENT_REQUESTS=10
TRADE_ALERT__PRICE_FETCHER__MAX_REQUESTS_PER_HOUR=1000
TRADE_ALERT__PRICE_FETCHER__REQUEST_TIMEOUT_SECS=30
TRADE_ALERT__PRICE_FETCHER__POOL_IDLE_TIMEOUT_SECS=300

# 📝 日志配置 (可选)
TRADE_ALERT__LOGGING__LEVEL=info

# 🛠️ SQLx配置 (必需)
SQLX_OFFLINE=true

# 📝 说明:
# 1. 将上述变量添加到Railway的Variables页面
# 2. 替换"你的Gmail地址"为实际的Gmail地址
# 3. 替换"你的Gmail应用专用密码"为从Google生成的16位密码
# 4. Gmail应用专用密码获取方法请参考 RAILWAY_DEPLOY_GUIDE.md 