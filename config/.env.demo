# 演示模式环境变量配置
# 使用方法: 复制到 .env 文件或通过脚本启动

# 数据库配置 - 使用独立的演示数据库
DATABASE_URL=sqlite:data/demo_trade_alert.db
SQLX_OFFLINE=false

# 演示模式配置
TRADE_ALERT__DEMO__ENABLED=true
TRADE_ALERT__DEMO__MAX_ALERTS_PER_USER=5
TRADE_ALERT__DEMO__DATA_RETENTION_HOURS=24
TRADE_ALERT__DEMO__DISABLE_EMAIL=true
TRADE_ALERT__DEMO__SHOW_DEMO_BANNER=true
TRADE_ALERT__DEMO__RATE_LIMIT_PER_MINUTE=20

# 禁用邮件通知（演示模式）
TRADE_ALERT__EMAIL__ENABLED=false

# 服务器配置
TRADE_ALERT__SERVER__HOST=127.0.0.1
TRADE_ALERT__SERVER__PORT=3000

# 日志级别
TRADE_ALERT__LOGGING__LEVEL=info

# 价格获取配置（演示模式使用较低频率）
TRADE_ALERT__PRICE_FETCHER__UPDATE_INTERVAL_SECS=60
TRADE_ALERT__PRICE_FETCHER__CACHE_TTL_SECS=300
TRADE_ALERT__PRICE_FETCHER__MAX_RETRIES=2
TRADE_ALERT__PRICE_FETCHER__MAX_CONCURRENT_REQUESTS=5
TRADE_ALERT__PRICE_FETCHER__MAX_REQUESTS_PER_HOUR=200